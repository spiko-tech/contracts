{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "hardhat.config.ts",
    "declarations.d.ts",
    "scripts/**/*",
    "test/**/*",
    "typechain-types/**/*"
  ]
}
